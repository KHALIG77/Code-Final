@model ResetPasswordViewModel
<div id="site-main" class="site-main">
	<div id="main-content" class="main-content">
		<div id="primary" class="content-area">
			<div id="title" class="page-title">
				<div class="section-container">
					<div class="content-title-heading">
						<h1 class="text-title-heading">
							Login / Register
						</h1>
					</div>
					<div class="breadcrumbs">
						<a asp-action ="index" asp-controller="home">Home</a><span class="delimiter"></span>Login / Register
					</div>
				</div>
			</div>

			<div id="content" class="site-content" role="main">
				<div class="section-padding">
					<div class="section-container p-l-r">
						<div class="page-login-register" style="margin-bottom:30px;">
							<div class="d-flex justify-content-center align-center">
								<div class="col-lg-6 col-md-6 col-sm-12 sm-m-b-50">
									<div class="box-form-login">
										<h2>Change Password</h2>
										<div class="box-content">
											<div class="form-login">
												<form method="post" class="login" asp-action="resetpassword">
													<div class="username">
														<label asp-for="Password">New Password <span class="required">*</span></label>
														<input asp-for="Password" type="password" class="input-text" id="username">

													</div>
													<div class="password">
														<label asp-for="ConfirmPassword">Confirm Password <span class="required">*</span></label>
														<input asp-for="ConfirmPassword" class="input-text" type="password">

													</div>
													<input type="hidden" name="Email" value="@ViewBag.Email"/>
													<input type="hidden" name="Token" value="@ViewBag.Token" />
													
													<div asp-validation-summary="ModelOnly"></div>
													<div class="rememberme-lost">

														
													</div>
													<div class="button-login">
														<input type="submit" class="button" name="login" value="Change">
													</div>
												</form>
											</div>
										</div>
									</div>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div><!-- #content -->
		</div><!-- #primary -->
	</div><!-- #main-content -->
</div>
@Html.Partial("_ValidationScriptsPartial")