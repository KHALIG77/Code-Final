@model OrderFormViewModel

<div class="col-xl-8 col-lg-7 col-md-12 col-12">
	<div class="customer-details">
		<div class="billing-fields">
			<h3>Billing details</h3>
			<div class="billing-fields-wrapper">
				<p class="form-row form-row-first validate-required">
					<label asp-for="FullName">Full name <span class="required" title="required">*</span></label>
					<span class="input-wrapper"><input asp-for="FullName" class="input-text"  value=""></span>
					<span asp-validation-for="FullName"></span>
				</p>

				<p class="form-row address-field validate-required form-row-wide">
					<label asp-for="City">Town / City <span class="required" title="required">*</span></label>
					<span class="input-wrapper"><input asp-for="City" class="input-text"  value=""></span>
					<span asp-validation-for="City"></span>

				</p>

				<p class="form-row address-field validate-required form-row-wide">
					<label>Street address <span class="required" title="required">*</span></label>
					<span class="input-wrapper">
						<input asp-for="Address"  class="input-text"  placeholder="House number and street name" value="">
					</span>
					<span asp-validation-for="Address"></span>

				</p>
				<p class="form-row address-field form-row-wide">
					<label>Apartment, suite, unit, etc.&nbsp;<span class="optional">(optional)</span></label>
					<span class="input-wrapper">
						<input asp-for="Apartment" class="input-text"  placeholder="Apartment, suite, unit, etc. (optional)" value="">
					</span>
					<span asp-validation-for="Apartment"></span>

				</p>
			
				<p class="form-row form-row-wide validate-required validate-email">
					<label>Email address <span class="required" title="required">*</span></label>
					<span class="input-wrapper">
						<input asp-for="Email" class="input-text" >
					</span>
					<span asp-validation-for="Email"></span>

				</p>
				<p class="form-row form-row-wide validate-required validate-phone">
					<label>Phone <span class="required" title="required">*</span></label>
					<span class="input-wrapper">
						<input asp-for="Phone" class="input-text"  value="">
					</span>
					<span asp-validation-for="Phone"></span>

				</p>

			</div>
		</div>

	</div>

	<div class="additional-fields">
		<p class="form-row notes">
			<label>Order notes <span class="optional">(optional)</span></label>
			<span class="input-wrapper">
				<textarea  asp-for="Note" class="input-text" placeholder="Notes about your order, e.g. special notes for delivery." rows="2" cols="5"></textarea>
			</span>
		</p>
	</div>
</div>