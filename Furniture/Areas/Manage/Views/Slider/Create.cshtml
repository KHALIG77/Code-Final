@model Slider

<div class="col-xl">
    <div class="card mb-4" style="margin:30px;">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Slider Create</h5>
        </div>
        <div class="card-body">
            <form asp-action="create" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" asp-for="Order">Slider Order</label>
                    <input type="number" value="@ViewBag.Order" min="0" class="form-control" id="basic-default-company" asp-for="Order" placeholder="">
                    <span asp-validation-for="Order"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Title">Slider Title</label>
                    <input type="text" class="form-control" id="basic-default-fullname" asp-for="Title" placeholder="Title">
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Description">Description</label>
                    <textarea id="basic-default-message" class="form-control" asp-for="Description" placeholder="Please write about product"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
               
                <div class="mb-3">
                    <label class="form-label" asp-for="BtnUrl">Redirect URL</label>
                    <input type="text"  class="form-control" id="basic-default-company" asp-for="BtnUrl" placeholder="Example:Google.com">
                    <span asp-validation-for="BtnUrl"></span>
                </div>
                <div class="form-check form-switch mb-2">
                    <input class="form-check-input" asp-for="MainSlider" id="flexSwitchCheckDefault">
                    <label class="form-check-label" asp-for="MainSlider">Main Slider</label>
                </div>
                <div class="mb-3 " style="width:30%;">
                    <label asp-for="ImageSlide" class="form-label">Choose Main Image</label>
                    <input class="form-control" type="file" asp-for="ImageSlide" id="formFile">
                    <span asp-validation-for="ImageSlide"></span>
                </div>
              
             

                <div asp-validation-summary="ModelOnly"></div>

                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </div>
    </div>
</div>
@section Validation{
    @Html.Partial("_ValidationScript")
}
