@model PaginatedList<InstagramPhoto>


<div class="card" style="margin:30px">
    <div class="d-flex justify-content-center" style="margin:20px 0px;color:white;">
        <a asp-action="create" class="btn btn-primary">Create </a>
    </div>
    <div class="table-responsive text-nowrap" style="min-height:300px;">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var inst in Model.Items)
                {
                    <tr>
                        <td> <strong>@inst.Id</strong></td>
            
                        <td><img width="70px" height="70px" src="~/uploads/instagram/@inst.Image"></td>


                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="bx bx-dots-vertical-rounded"></i></button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item delete-action" asp-action="delete" asp-route-id="@inst.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>
<nav aria-label="Page navigation" class="d-flex justify-content-center">
    <ul class="pagination">
        <li class="page-item @(Model.HasPrevious?"":"disabled")  prev">
            <a asp-action="index"   asp-route-page="@(Model.PageIndex-1)" class="page-link"><i class="tf-icon bx bx-chevrons-left"></i></a>
        </li>
        @for (int i = 1; i <= Model.TotalPage; i++)
        {
            <li class="page-item  @(i==Model.PageIndex?"active":"")">
                <a asp-action="index" asp-route-page="@i"  class="page-link">@i</a>
            </li>
        }


        <li class="page-item @(Model.HasNext?"":"disabled") next">
            <a asp-action="index"  asp-route-page="@(Model.PageIndex+1)" class="page-link "><i class="tf-icon bx bx-chevrons-right"></i></a>
        </li>
    </ul>
</nav>
@section SweatAlert{

    @Html.Partial("SweatAlert")

}

