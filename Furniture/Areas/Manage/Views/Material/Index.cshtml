@model List<Material>


<div class="card" style="margin:30px">
    <div class="d-flex justify-content-center" style="margin:20px 0px;color:white;">
        <a asp-action="create" class="btn btn-primary">Create </a>
    </div>
    <div class="table-responsive text-nowrap" style="min-height:300px;">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Material Name</th>
                    <th>Product Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var material in Model)
                {
                    <tr>
                        <td> <strong>@material.Id</strong></td>
                        <td>@material.Name</td>
                        <td>@material.Products.Count()</td>


                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="bx bx-dots-vertical-rounded"></i></button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="edit" asp-route-id="@material.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item delete-action" asp-action="delete" asp-route-id="@material.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>
<!--/ Hoverable Table rows -->
@section SweatAlert{
    @Html.Partial("SweatAlert")
}
