    <script src="~/manage/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>

    <script src="~/manage/assets/vendor/js/menu.js"></script>
    <!-- endbuild -->
    <!-- Vendors JS -->
    <!-- Main JS -->
    <script src="~/manage/assets/js/main.js"></script>

    <!-- Page JS -->
    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="../../../buttons.github.io/buttons.js"></script>
    @Html.Partial("_ValidationScript")

</body>


